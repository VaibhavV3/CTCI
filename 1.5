public class Solution {
    public static void main(String[] args) {
        System.out.println(new Solution().oneWay("pales","pelet"));
    }
    // # 23, 97, 130
    public boolean oneWay(String s, String t){
        int arr[] = new int[26];
        int sLen = s.length(), tLen=t.length();
        
        if(sLen==tLen || sLen==tLen+1 || sLen==tLen-1){
            boolean flag = true;
            boolean eqLen = sLen==tLen;
            if(sLen<tLen){
                String x = s;
                s = t;
                t = x;
            }
            for(int i=0,j=0;i<tLen;i++,j++){
                if(s.charAt(i)!=t.charAt(j)){
                    if(!flag)
                        return false;
                    flag=false;
                    if(!eqLen)
                        j--;
                }
            }
            return true;
        }else{
            return false;
        }
        
    }
}
